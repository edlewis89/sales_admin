<%= flash[:notice] %>

<table>
<thead>
<tr>
  <th>Customer Name</th>
  <th>Item Description</th>
  <th>Item Price</th>
  <th>Quantity</th>
  <th>Merchant Name</th>
  <th>Merchant Address</th>
  <th>Total Sales</th>
</tr>
</thead>
  <tbody>
  <% if @users %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.customer_name %></td>
        <td><%= user.item_description %></td>
        <td><%= user.item_price %></td>
        <td><%= user.quantity %></td>
        <td><%= user.merchant_name %></td>
        <td><%= user.merchant_address %></td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td><%= User.get_total_sales %></td>
    </tr>
  <% end %>
  </tbody>
</table>


